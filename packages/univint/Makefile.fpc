# FPCMacOSAll is not a build unit, but directly includes the code of
# most other units
[install]
buildunit=MacOS
fpcpackage=y

[compiler]
includedir=src
sourcedir=src tests

[default]
fpcdir=../..

[rules]
MacOSAll$(PPUEXT): $(filter-out MacOS.pas GPCStrings.pas,$(wildcard *.pas))
MacOS$(PPUEXT): $(filter-out MacOSAll.pas,$(wildcard *.pas))
