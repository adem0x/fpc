#
#   Makefile.fpc for OpenGL for FPC
#

[package]
name=opengl
version=2.0.0

[require]
packages_linux=x11
packages_freebsd=x11
packages_netbsd=x11
packages_openbsd=x11
packages_darwin=x11

[target]
units=gl glu glut
units_win32=glext
units_linux=dllfuncs glx glext
units_freebsd=dllfuncs glx glext
units_netbsd=dllfuncs glx glext
units_openbsd=dllfuncs glx glext
units_darwin=dllfuncs glx glext
exampledirs=examples

[install]
fpcpackage=y

[default]
fpcdir=../../..
