#
#   Makefile.fpc for Free Pascal GTK 2.x.y Bindings
#

[package]
name=gtk2
version=2.0.0

[require]
libc=y

[target]
units=buildgtk2 
exampledirs=examples
implicitunits=glib2 atk pango gdk2pixbuf gdk2 gtk2 libglade2 gtkglext gdkglext gdk2x

[compiler]
unitdir=glib atk pango gtk+/gdk-pixbuf gtk+/gdk gtk+/gtk libglade gtkglext gtk2x11
includedir=gtk2x11/include

[install]
buildunit=buildgtk2
fpcpackage=y

[shared]
build=n

[default]
fpcdir=../../..

