#
#   Makefile.fpc for PTCPas
#

[package]
name=ptc
version=0.99.5

[target]
units=ptc
loaders=$(CPU_LOADERS)
exampledirs=demos examples

[compiler]
unitdir=src/x11 src/dos/cga src/dos/fakemode src/dos/textfx2 src/dos/timeunit src/dos/vesa \
        src/win32/directx src
includedir=src
targetdir=.

[require]
packages=hermes
packages_linux=x11
packages_freebsd=x11

[default]
fpcdir=../..


[rules]
.NOTPARALLEL:
